<h1>
    <%= title %>
</h1>

<% if (typeof messages !=='undefined' && messages.notice) { %>
    <div class="alert alert-notice">
        <%= messages.notice %>
    </div>
    <% } %>

        <% if (typeof messages !=='undefined' && messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
            <% } %>

                <!-- Validation errors (express-validator) -->
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <div class="form-container">
                            <p><strong>Confirm Deletion - The delete is permanent.</strong></p>
                            <p>Please review the information below to confirm this is the correct inventory item to
                                delete.</p>

                            <form id="deleteForm" action="/inv/delete" method="post">

                                <!-- Make -->
                                <div class="form-group">
                                    <label for="inv_make">Make:</label>
                                    <input type="text" id="inv_make" name="inv_make" readonly
                                        value="<%= locals.inv_make || '' %>">
                                </div>

                                <!-- Model -->
                                <div class="form-group">
                                    <label for="inv_model">Model:</label>
                                    <input type="text" id="inv_model" name="inv_model" readonly
                                        value="<%= locals.inv_model || '' %>">
                                </div>

                                <!-- Year -->
                                <div class="form-group">
                                    <label for="inv_year">Year:</label>
                                    <input type="text" id="inv_year" name="inv_year" readonly
                                        value="<%= locals.inv_year || '' %>">
                                </div>

                                <!-- Price -->
                                <div class="form-group">
                                    <label for="inv_price">Price:</label>
                                    <input type="text" id="inv_price" name="inv_price" readonly
                                        value="<%= locals.inv_price || '' %>">
                                </div>

                                <!-- Hidden field for inv_id -->
                                <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

                                <div class="form-actions">
                                    <button type="submit" class="btn-danger">Delete Vehicle</button>
                                    <a href="/inv/" class="btn-secondary">Cancel</a>
                                </div>
                            </form>
                        </div>