<h1>
    <%= title %>
</h1>

<% if (typeof messages !=='undefined' && messages.notice) { %>
    <div class="alert alert-notice">
        <%= messages.notice %>
    </div>
    <% } %>

        <% if (typeof messages !=='undefined' && messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
            <% } %>

                <% if (typeof errors !=='undefined' && errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <div class="account-container">
                            <% if (typeof accountData !=='undefined' && accountData && accountData.account_firstname) {
                                %>
                                <h2>Welcome <%= accountData.account_firstname %>
                                </h2>

                                <% if (accountData.account_type && (accountData.account_type==="Employee" ||
                                    accountData.account_type==="Admin" )) { %>
                                    <h3>Inventory Management</h3>
                                    <p><a href="/inv/">Manage Inventory</a></p>
                                    <% } %>

                                        <p><a href="/account/update/<%= accountData.account_id %>">Update Account
                                                Information</a></p>

                                        <h3>My Activities</h3>
                                        <ul class="account-links">
                                            <li><a href="/favorites/my-favorites">‚ù§ My Favorite Vehicles</a></li>
                                            <li><a href="/appointments/my-appointments">üìÖ My Test Drive
                                                    Appointments</a></li>
                                        </ul>

                                        <% } else { %>
                                            <p>Account data not available. Please log in again.</p>
                                            <% } %>
                        </div>