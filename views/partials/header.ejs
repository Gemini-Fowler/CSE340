<header id="top-header">
    <div class="siteName">
        <img src="/images/site/icon.png" alt="CSE Motors Logo">
        <a href="/" title="Return to home page">CSE Motors</a>
    </div>

    <div id="tools">
        <% if (typeof loggedin !=='undefined' && loggedin && typeof accountData !=='undefined' && accountData) { %>
            <a title="Click to view account" href="/account">Welcome <%= accountData.account_firstname %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
            <% } else { %>
                <a title="Click to log in" href="/account">My Account</a>
                <% } %>
    </div>
</header>